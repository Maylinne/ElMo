<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.elmo.EChooserFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:background="#000000">

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:src="@drawable/e_earth_oval"
            android:background="@null"
            android:id="@+id/earth"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            />

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:src="@drawable/e_water_oval"
            android:background="@null"
            android:id="@+id/water"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:src="@drawable/e_air_oval"
            android:background="@null"
            android:id="@+id/air"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/earth"
            android:layout_alignStart="@+id/earth" />

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:src="@drawable/e_fire_oval"
            android:background="@null"
            android:id="@+id/fire"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

</FrameLayout>
