<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000">
    <ImageView
        android:id="@+id/monc_picture"
        android:contentDescription="@string/playerImageDesc"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="3"
        android:padding="5dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/monsterName_TV"
            style="@style/attributes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="30"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:textSize="18sp"
            tools:text="Monster name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/attributes"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/level" />

                <TextView
                    android:id="@+id/level_TV"
                    style="@style/attributes"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    tools:text="LVL" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/attributes"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/attack" />

                <TextView
                    android:id="@+id/attack_TV"
                    style="@style/attributes"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    tools:text="Att" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/attributes"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/defense" />

                <TextView
                    android:id="@+id/defense_TV"
                    style="@style/attributes"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    tools:text="Def" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/attributes"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/hitPoints" />

                <TextView
                    android:id="@+id/hitPoints_TV"
                    style="@style/attributes"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    tools:text="HP" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/attributes"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/experience" />

                <TextView
                    android:id="@+id/xp_TV"
                    style="@style/attributes"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    tools:text="XP" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>